<% @user ||= current_user %>
<div class="stats">
  <%= link_to following_user_path(@user) do %>
  <strong id="following" class="stat">
    <%= @following %>
  </strong>
  <%= t "shared.stats.following" %>
  <% end %>

  <%= link_to followers_user_path(@user) do %>
  <strong id="follower" class="stat">
    <%= @follower %>
  </strong>
  <%= t "shared.stats.follower" %>
  <% end %>
</div>
